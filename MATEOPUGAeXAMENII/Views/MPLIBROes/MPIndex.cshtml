        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MP_NombreLibro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MP_Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MP_HoraAgregacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MP_FechaPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MP_Nuevo)
            </td>
